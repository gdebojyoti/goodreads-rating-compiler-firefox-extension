{
  "manifest_version": 2,
  "name": "GoodReads Rating Compiler",
  "version": "0.1",

  "description": "Look up data for different books on GoodReads",

  "icons": {
    "48": "icons/grc-64.png"
  },

  "background": {
    "scripts": ["background/index.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icons/grc-64.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "*://*.wikipedia.org/*",
    "*://*.google.com/*",
    "*://*.goodreads.com/*"
  ]
}
